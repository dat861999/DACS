    "version": "0.2.0",
    "configurations": [
    {
        "name": "Listen for Xdebug 2",
        "type": "php",
        "request": "launch",
        "port": 9000
    },
    
    
        {
            "name": "Listen for XDebug",
            "type": "php",
            "request": "launch",
            "port": 9000
        },
        {
            "name": "Launch currently open script 2",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "port": 9000
        },
        {
            "name": "Xdebug for Docker",
            "type": "php",
            "request": "launch",
            "port": 9000,
            "pathMappings": {
                "dockerPath": "${workspaceFolder}"
            }
        },
        {
            "name": "Launch currently open script 2",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "port": 9000
        },
        {
            "type": "pwa-chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost",
            "webRoot": "${workspaceFolder}"
        }
    ]
}